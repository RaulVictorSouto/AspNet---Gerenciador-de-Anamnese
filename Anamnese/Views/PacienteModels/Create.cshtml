@model Anamnese.Models.PacienteModel

@{
    ViewData["Title"] = "Cadastro de Pacientes";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Nome e Sobrenome -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="NomePaciente" class="form-label"></label>
                        <input asp-for="NomePaciente" class="form-control" placeholder="Digite o nome" />
                        <span asp-validation-for="NomePaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SobrenomePaciente" class="form-label"></label>
                        <input asp-for="SobrenomePaciente" class="form-control" placeholder="Digite o sobrenome" />
                        <span asp-validation-for="SobrenomePaciente" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Data de Nascimento e Gênero -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DataNascimentoPaciente" class="form-label"></label>
                        <input asp-for="DataNascimentoPaciente" class="form-control" type="date" />
                        <span asp-validation-for="DataNascimentoPaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="GeneroPaciente" class="form-label"></label>
                        <select asp-for="GeneroPaciente" class="form-select">
                            <option value="" disabled selected>Selecione...</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                            <option value="Divorciado(a)">Divorciado(a)</option>
                            <option value="Outro">Outro</option>
                            <option value="Prefiro não informar">Prefiro não informar</option>
                        </select>
                        <span asp-validation-for="GeneroPaciente" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Documentos -->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="CpfPaciente" class="form-label"></label>
                        <input asp-for="CpfPaciente" class="form-control" placeholder="XXX.XXX.XXX-XX" />
                        <span asp-validation-for="CpfPaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="RgPaciente" class="form-label"></label>
                        <input asp-for="RgPaciente" class="form-control" placeholder="XX.XXX.XXX-XX" />
                        <span asp-validation-for="RgPaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="CertidaoPaciente" class="form-label"></label>
                        <input asp-for="CertidaoPaciente" class="form-control" placeholder="XXXXXX, XX XX XXXX, XX:XX" />
                        <span asp-validation-for="CertidaoPaciente" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Contato -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="TelefonePaciente" class="form-label"></label>
                        <input asp-for="TelefonePaciente" class="form-control" placeholder="(XX) XXXX-XXXX" />
                        <span asp-validation-for="TelefonePaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CelularPaciente" class="form-label"></label>
                        <input asp-for="CelularPaciente" class="form-control" placeholder="(XX) XXXXX-XXXX" />
                        <span asp-validation-for="CelularPaciente" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Endereço -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CepPaciente" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="CepPaciente" class="form-control" placeholder="XXXXX-XXX" />
                            <button type="button" class="btn btn-primary bi bi-search" onclick="ObterDadosViaCep()"></button>
                        </div>
                        <span asp-validation-for="CepPaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="LogradouroPaciente" class="form-label"></label>
                        <input asp-for="LogradouroPaciente" class="form-control" placeholder="Rua, Avenida..." />
                        <span asp-validation-for="LogradouroPaciente" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="NumeroEnderecoPaciente" class="form-label"></label>
                        <input asp-for="NumeroEnderecoPaciente" class="form-control" placeholder="Número" />
                        <span asp-validation-for="NumeroEnderecoPaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="BairroPaciente" class="form-label"></label>
                        <input asp-for="BairroPaciente" class="form-control" placeholder="Bairro" />
                        <span asp-validation-for="BairroPaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="CidadePaciente" class="form-label"></label>
                        <input asp-for="CidadePaciente" class="form-control" placeholder="Cidade" />
                        <span asp-validation-for="CidadePaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="EstadoPaciente" class="form-label"></label>
                        <select asp-for="EstadoPaciente" class="form-select">
                            <option value="" disabled selected>Selecione...</option>
                            @* Opções do estado *@
                            <option value="AC">AC</option>
                            <option value="AL">AL</option>
                            <option value="AP">AP</option>
                            <option value="AM">AM</option>
                            <option value="BA">BA</option>
                            <option value="CE">CE</option>
                            <option value="DF">DF</option>
                            <option value="ES">ES</option>
                            <option value="GO">GO</option>
                            <option value="MA">MA</option>
                            <option value="MT">MT</option>
                            <option value="MS">MS</option>
                            <option value="MG">MG</option>
                            <option value="PA">PA</option>
                            <option value="PB">PB</option>
                            <option value="PR">PR</option>
                            <option value="PE">PE</option>
                            <option value="PI">PI</option>
                            <option value="RJ">RJ</option>
                            <option value="RN">RN</option>
                            <option value="RS">RS</option>
                            <option value="RO">RO</option>
                            <option value="RR">RR</option>
                            <option value="SC">SC</option>
                            <option value="SP">SP</option>
                            <option value="SE">SE</option>
                            <option value="TO">TO</option>
                        </select>
                        <span asp-validation-for="EstadoPaciente" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Botão Cadastrar -->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-primary btn-lg w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
