@model IEnumerable<Anamnese.Models.AnamneseModel>

@{
    ViewData["Title"] = "Index";
    var idPaciente = ViewBag.IdPaciente;
    var nome = ViewBag.Nome;
}

<h1>Lista de Anamneses</h1>
<h3>Paciente: @nome</h3>

<p>
    <a asp-action="Create" asp-route-idPaciente="@ViewBag.IdPaciente">Adicionar nova anamnese</a>
</p>

<script>
    function openPdf(url) {
        window.open(url, '_blank');
    }
</script>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastroAnamnese)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastroAnamnese)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdAnamnese" asp-route-IdPaciente="@ViewBag.IdPaciente">Detalhes</a> |
                <a href="javascript:openPdf('@Url.Action("GerarPdf", new { id = item.IdAnamnese })');">Gerar PDF</a> |
                <a asp-action="Edit" asp-route-id="@item.IdAnamnese" asp-route-IdPaciente="@ViewBag.IdPaciente">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAnamnese" asp-route-IdPaciente="@ViewBag.IdPaciente">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Index" asp-controller="PacienteModels" class="btn btn-primary sticky-top">Voltar</a>
</p>
